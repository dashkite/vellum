html
  --background transparent
  --dark-background #883ABE
  --soft-background #D1C1D8
  --large-button-background #883ABE
  --background white
  --logo-text #783664
  --link-text #883ABE
  --button-text #883ABE
  --gradient-start #CBBCD3
  --gradient-end #F2DFC5

  font-family \
    ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont,
    "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif,\
    "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol",\
    "Noto Color Emoji"

body
  background #111
  color #eee
  margin 0
  padding 0
  height 100vh
  display grid
  grid-template-rows 6rem 1fr 4rem

  & > header
    margin 2rem

  & > main
    margin 2rem

    & > h2
      border-bottom 1px solid silver

    section.showcase
      background white
      color black
      border 1px solid silver
      border-radius 0.25rem
      padding 1rem
      margin 1rem
