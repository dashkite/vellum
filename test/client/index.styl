html
  --background transparent
  --dark-background #883ABE
  --soft-background #D1C1D8
  --large-button-background #883ABE
  --background white
  --logo-text #783664
  --link-text #883ABE
  --button-text #883ABE
  --gradient-start #CBBCD3
  --gradient-end #F2DFC5

  font-family \
    ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont,
    "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif,\
    "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol",\
    "Noto Color Emoji"

body
  background #111
  color #eee
  margin 0
  padding 0
  height 100vh
  display grid
  grid-template-rows 6rem 1fr 4rem

  & > header
    margin 2rem

  & > main
    margin 2rem

    & > h2
      border-bottom 1px solid silver

    .tag
      line-height 1.25rem
      font-size 1.25rem
    section.showcase
      background white
      color black
      border 1px solid silver
      border-radius 0.25rem
      padding 1rem
      margin 1rem

      & > vellum-preview
        max-width 20rem

      & > vellum-drawer
        [slot]
          display inline-flex
          align-items center
          &:before
            display inline-block
            height 1.25rem
            width 1.25rem
            margin-right 0.5rem

        [slot = "closed-label"]
          &:before
            content embedurl("closed-folder.svg", "utf8")
        [slot = "opened-label"]
          &:before
            content embedurl("opened-folder.svg", "utf8")

      & > vellum-tabs
        label
          padding 0.75rem
          border 1px solid silver
          border-top-left-radius 0.5rem
          border-top-right-radius 0.5rem
          margin-right 0.25rem
          transition border-width 0.1s linear

        div
          padding 0.75rem


        [selected]
          border-bottom 2px solid black
