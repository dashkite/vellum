:host
  display block
  background-color var(--background)
  color var(--text)
  line-height 1rem
  font-size 0.9rem
  :focus
    outline none
    box-shadow 0 0 0 1px var(--accent)

  nav
    background-color inherit
    color inherit
    display flex
    flex-wrap wrap
    justify-content center
    padding 0.5rem

    & > a
      // min device width we're allowing for is 320px
      // however, we have 0.5rem (8px) margins on either
      // side, so that's really 304px, or 19rem (304/16)
      // so at 4.5rem width per item, we have room for
      // 4 items (4 x 4.5 = 18), with 1rem leftover for
      // spacing on either side of the menu itself
      color inherit
      box-sizing border-box
      width 4.5rem
      padding-top 1rem
      padding-right 0.5rem
      padding-left 0.5rem
      padding-bottom 0.5rem

      // this only matters when focused
      border-radius 0.5rem

      display flex
      flex-flow column
      align-items center
      justify-content flex-start
      text-decoration none

      & > svg
        margin-bottom 0.5rem
        display inline-block
        fill var(--text)
        // overflow visible
        height 1.5rem
        width 1.5rem

      & > span
        text-align center

:host(.large)
  line-height 1.5rem
  font-size 1.35rem

  nav
    & > a
      width 8rem
      height 8rem
      & > svg
        height 2rem
        width 2rem
