// adapted from: https://codepen.io/rstrangh/pen/dGweRo

:host
  display block
  :focus
    outline none
    box-shadow 0 0 0 1px var(--primary-accent)

.content
  overflow hidden
  transition all 0.2s ease-in-out

label
  padding 0
  margin 0

  & > div
    user-select none
    cursor pointer
    display block
  & > .opened
    display none
  & > .closed
    display block
  & + .content
    display none

input[id="toggle"]
  padding 0
  margin 0
  position absolute
  opacity 0
  z-index -1

input[id="toggle"]
  pointer-events none

input:checked + label
  & > .opened
    display block
  & > .closed
    display none
  & + .content
    display block
