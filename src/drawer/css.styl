// adapted from: https://codepen.io/rstrangh/pen/dGweRo

:host
  display block
  :focus
    outline none
    box-shadow 0 0 0 1px var(--accent)

label + div
  overflow hidden
  transition all 0.2s ease-in-out

label
  padding 0
  margin 0
  user-select none
  cursor pointer
  display block

  ::slotted(.node.open)
    display none
    &:has(.selected)
      display block !important
  ::slotted(.node.closed)
    display block
    &:has(.selected)
      display none !important

::slotted([slot='content'])
  display none

input[id="toggle"]
  padding 0
  margin 0
  position absolute
  opacity 0
  z-index -1

input[id="toggle"]
  pointer-events none

