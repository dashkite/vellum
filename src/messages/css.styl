@keyframes fade
  from 
    opacity 0 
  to 
    opacity 1

.container
  &.fade
    animation fade 2.5s 2 ease alternate

  padding 0.5rem 1.5rem
  border-radius 0.5rem
  min-height calc(1rem + var(--copy-line-height))
  
  &.success
    background-color var(--info)

  &.failure
    background-color var(--warning)
  