:host
  display block
  min-width 18rem

:host([data-preset='card'])
  a
    color inherit
    text-decoration none

    &:focus
      outline none
      article
        border 1px solid black


  article
    max-width fit-content
    background-color white
    padding 1rem
    border 1px solid silver
    border-radius 0.5rem

    header
      display flex
      align-items center
      padding-bottom 1rem
      border-bottom 1px solid silver
      margin-bottom 1rem

      .publisher
        display flex
        align-items center

        img
          margin 0
          padding 0
          width 2rem
          margin-right 0.5rem

      .headline
        display flex
        flex-flow column
        overflow auto

        h2
          margin 0
          padding 0
          line-height 1.25rem
          font-size s('calc(%s * 0.8)', @line-height)
          white-space nowrap
          overflow hidden
          text-overflow ellipsis

        p
          margin 0
          padding 0
          line-height 1.25rem
          font-size s('calc(%s * 2/3)', @line-height)

          &.byline
            display flex
            align-items center

            span
              white-space nowrap
              opacity 0.75

              &.author
                display inline-block
                overflow hidden
                text-overflow ellipsis
                font-weight bold
                margin-right 0.5rem

    section
      overflow auto

      p
        margin 0
        padding 0
        line-height 1.5rem
        font-size s('calc(%s * 2/3)', @line-height)

        &:not(:last-child)
          margin-bottom 1rem

      img
        display block
        margin 0 auto
        padding 0
        border-radius 0.5rem
        max-width 100%
        max-height 33vh
        object-fit contain

        &:not(:last-child)
          margin-bottom 1rem

:host([data-preset='iframe'])
  a
    color inherit
    text-decoration none

    &:focus
      outline none
      iframe
        border 1px solid black
  iframe
    margin 0
    padding 0
    border none
    border-radius 0.5rem
    width 100%
    height 25rem
