if preset == "player" || preset == "iframe"
  iframe(
    width="560"
    height="315"
    src=media.videos[0].formats[0].url
    allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
  )

else
  // YouTube doesn't bother with the author and the description is fubar
  article(class  = preset)
    header
      .publisher
        if favicon
          img(src = favicon)

      .headline
        h2= title

    section: img(src = image)
